<script>
$(document).ready(function(){


    getTaskList_{{ widget.id }}();
    function getTaskList_{{ widget.id }}()
    {
        $('#taskList-{{ widget.id }}').html('<div class="spinner-border spinner-border-sm" role="status"></div> ' + '{{ "Loading"|trans }}' + '...');
        $.ajax({
            url: '{{ path('ics-cron-task-list') }}',
            data: {
                'widgetId': {{ widget.id }}
            }
        }).done(function(data){
            $('#taskList-{{ widget.id }}').html(data);
        });

    }
});

</script>